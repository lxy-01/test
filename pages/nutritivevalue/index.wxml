<!-- 滑动页 -->
<swiper bindchange="bindchange" current="{{navState}}">
    <block>
        <swiper-item>
            <view class="table">
                <view class="tr bg-w">
                    <view class="th">名称</view>
                    <view class="th">重量</view>
                    <view class="th">存放天数</view>
                </view>
                <block wx:for="{{list}}" wx:key="list">
                    <view class="tr bg-g" wx:if="{{index % 2==0}}">
                        <view class="td">{{item.name}}</view>
                        <view class="td">{{item.weight}}</view>
                        <view class="td">{{item.reservedate}}</view>
                    </view>
                    <view class="tr" wx:else>
                        <view class="td">{{item.name}}</view>
                        <view class="td">{{item.weight}}</view>
                        <view class="td">{{item.reservedate}}</view>
                    </view>
                </block>
            </view>
        </swiper-item>
        <swiper-item>
            <view class="container">
                <ec-canvas id="mychart" canvas-id="mychart-bar" ec="{{ ec }}"></ec-canvas>
            </view>
        </swiper-item>
    </block>
</swiper>